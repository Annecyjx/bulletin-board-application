doctype html
html
	head
		link(type='text/css', rel='stylesheet', href='css/materialize.min.css', media='screen,projection')
		style.
			h2{
			text-indent: 15px;
			text-align: left;
			font-family: 'Lucida Console';
			font-style: oblique;
			font-size: 20px;
			color: #8B4513;
			}
			h3{
			text-indent: 15px;
			text-align: left;
			font-family: 'Lucida Console';
			font-style: oblique;
			font-size: 16px;
			color: #778899;
			}
	body
		nav
			.nav-wrapper.teal.lighten-2
				a.brand-logo.center(href='#!') Bulletin Board
				ul.left.hide-on-med-and-down
					li
						a(href='/home') Post!
					li
						a(href='/history') History
		h2 Message box:
		if messageInfo
		each item in messageInfo
			h3 * #{item.title}: #{item.body}